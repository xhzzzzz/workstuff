ratio_df = df[['Asset Class/Product Type']].copy()

all_cols = df.columns.tolist()
start_idx = all_cols.index('SY1 Q1')
quarter_cols = all_cols[start_idx:]

ratio_df['SY1 Q1'] = df['SY1 Q1'] / df['Anchored Q0']

for i in range(1, len(quarter_cols)):
    ratio_df[quarter_cols[i]] = df[quarter_cols[i]] / df[quarter_cols[i-1]]
