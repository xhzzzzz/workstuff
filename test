cr_card_final = (
    cr_card_aft
    .set_index(['mapped_prd','mapped_metric'])
)

cr_card_pre_indexed = cr_card_pre.set_index(['mapped_prd','mapped_metric'])

cols = list(range(1, 8))

cr_card_final[cols] = (
    cr_card_final[cols] + cr_card_pre_indexed[cols]
) / 2

cr_card_final = cr_card_final.reset_index()
